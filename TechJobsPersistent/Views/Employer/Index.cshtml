@model List<TechJobsPersistent.Models.Employer>

<h1>Employers Currently Hiring</h1>

@if (Model.Count == 0)
{
    <p>No employers are currently hiring!</p>
}
else
{
    <div>
        <ul>
            @foreach (Employer employers in Model)
            {
                <li>
                    <a asp-controller="Employer" asp-action="About" asp-route-id="@employers.Id">@employers.Name</a>
                </li>
            }
        </ul>
    </div>
}