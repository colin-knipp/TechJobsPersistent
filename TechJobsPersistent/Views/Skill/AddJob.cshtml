@model TechJobsPersistent.ViewModels.AddJobSkillViewModel

<h1>Add Tag to Job: @Model.Job.Name</h1>

<form asp-controller="Skill" asp-action="AddJob" method="post">
    <input type="hidden" value="@Model.Job.Id" name="JobId" />
    <div class="form-group">
        <label asp-for="SkillId">Skill</label>
        <select asp-for="SkillId" asp-items="Model.Skills"></select>
        <span asp-validation-for="SkillId"></span>
    </div>
    <input type="submit" value="Add Skill" />

    <div class="form-group">
      <a asp-controller="Skill" asp-action="Add">Add additional skills</a>
    </div>
</form>
